<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hugo_silva.photonow.AlbunsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="Meus Álbuns" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:text="Privados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoPrivado"
            android:layout_weight="1" />

        <Button
            android:text="Públicos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoPublico"
            android:layout_weight="1" />

        <Button
            android:text="+ novo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoNovo"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border">

        <GridView
            android:background="@drawable/border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/galeria_albuns"
            android:columnWidth="100dp"
            android:numColumns="auto_fit"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
