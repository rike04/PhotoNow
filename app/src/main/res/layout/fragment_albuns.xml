<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/defaultLayout"
    android:orientation="vertical">

    <TextView
        style="@style/tituloTexto"
        android:text="Meus Álbuns" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/botoesTipoAlbum"
            android:text="Privados"
            android:id="@+id/botao_privado" />

        <Button
            style="@style/botoesTipoAlbum"
            android:text="Públicos"
            android:id="@+id/botao_publico" />

        <Button
            style="@style/botoesTipoAlbum"
            android:text="+ novo"
            android:id="@+id/botao_novo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/text_albuns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <ListView
            android:background="@drawable/border"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/galeria_albuns"
            android:horizontalSpacing="20dp"
            android:verticalSpacing="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </ListView>

    </LinearLayout>

</LinearLayout>
