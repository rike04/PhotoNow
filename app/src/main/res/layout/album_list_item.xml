<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/tituloTexto"
        android:layout_marginTop="5dp"
        android:id="@+id/lista_album_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp" />

    <ImageView
        style="@style/viewImagens"
        android:id="@+id/list_item_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lista_album_title" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/list_item_image"
        android:layout_centerHorizontal="true">

        <Button
            style="@style/botoesListaAlbum"
            android:id="@+id/edit_lista_album"
            android:background="@drawable/ic_editar" />

        <Button
            style="@style/botoesListaAlbum"
            android:id="@+id/edit_lista_album2"
            android:background="@drawable/ic_share" />

        <Button
            style="@style/botoesListaAlbum"
            android:id="@+id/shopping_cart_album"
            android:background="@drawable/ic_shopping_cart" />

        <Button
            style="@style/botoesListaAlbum"
            android:id="@+id/delete_btn"
            android:background="@drawable/ic_delete" />

    </LinearLayout>

</RelativeLayout>