<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/lista_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:textSize="25sp"
        android:fontFamily="serif" />

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lista_album_title" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/list_item_image"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/edit_lista_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_editar"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/edit_lista_album2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_share"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/shopping_cart_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_shopping_cart"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_delete"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>